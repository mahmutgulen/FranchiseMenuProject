@using FranchiseMenu.ENTITY.Dtos.CategoryDtos;
@model List<CategoryGetAllDto>
@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/PanelLayout.cshtml";
}

<div class="container-fluid">

    <h1 class="h3 mb-2 text-gray-800">Categories</h1>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <table class="table table-bordered">
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Edit</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CategoryName</td>
                                <td>@item.CategoryDescription</td>
                                <td>
                                    @if (item.CategoryStatus == false)
                                    {
                                        <p>Deactive</p>
                                    }
                                    @if (item.CategoryStatus == true)
                                    {
                                        <p>Active</p>
                                    }
                                </td>
                                <td><button type="button" class="btn btn-info"><i class="fa fa-cog" aria-hidden="true"></i></button></td>
                            </tr>
                        }
                    </table>
                </table>
            </div>
        </div>
    </div>
</div>